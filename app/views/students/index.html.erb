<p><%= notice %></p>
<h1 class= "text-center" >Listing Students</h1>
<div class= "d-flex align-item-center justify-content-center">
<%= search_form_for @q do |f| %>
  <%= f.label :first_name %>
  <%= f.search_field :first_name_cont, placeholder: 'EnterName', class: "rounded search-field" %>
  <%= f.submit class: "btn btn-primary search-button" %>
<% end %>
</div>
<table class = "table table-bordered" >
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>DOB</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Profile</th>
            <th colspan='3'>Action</th>
        </tr>
    </thead>
    <%= paginate @students %>
    <% @students.each do |s| %>
    <tbody>
        <tr>
            <td><%= s.id %></td>
            <td><%= s.first_name %></td>
            <td><%= s.last_name %></td>
            <td><%= s.email %></td>
            <td><%= s.date_of_birth%></td>
            <td><%= s.contact %></td>
            <td><%= s.address %></td>
            <td>
                <%if s.profile_pic.attached?%>
                  <img src = "<%= url_for(s.profile_pic)%>" height = "100px" width = "100px" class = "rounded-profile" style></img>
                <%else%>
                  <img src = "https://beforeigosolutions.com/wp-content/uploads/2021/12/dummy-profile-pic-300x300-1.png" height = "100px" width = "100px" class = "rounded-profile" ></img>
                <%end%>
            </td>
            <td><%= link_to 'view', student_path(s), class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_student_path(s), class: "btn btn-success" %></td>
            <td><%= button_to 'Delete', student_path(s.id), method: :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>
